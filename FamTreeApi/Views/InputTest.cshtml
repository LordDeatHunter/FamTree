@page
@model FamTreeApi.Views.InputTest

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="css/testinput.css">
    <script type="module" src="js/dataFetch.js"></script>
    <script type="module" src="js/input.js"></script>
    <title>FamTree</title>
</head>

<body>
<div>
    <input required type="text" id="birth-name-input" placeholder="Birth name"/>
    <input type="text" id="current-name-input" placeholder="Current name or name at death"/>
    <input type="text" id="birth-location-input" placeholder="Birth location"/>
    <input type="text" id="current-location-input" placeholder="Current location or location at death"/>
    <input type="text" id="birth-date-input" placeholder="Date of birth"/>
    <input type="text" id="death-date-input" placeholder="Date of death"/>
    <input required type="text" id="gender-input" placeholder="Gender"/>
    <input type="text" id="note-input" placeholder="Note"/>
    <input type="text" id="father-id-input" placeholder="ID of father"/>
    <input type="text" id="mother-id-input" placeholder="ID of mother"/>
    <button id="input-button" type="submit" value="Submit">Submit</button>
</div>
<div>
    <input required type="text" id="delete-uuid-input" placeholder="UUID to delete"/>
    <button id="delete-button" type="submit" value="Submit">Delete</button>
</div>
</body>

</html>